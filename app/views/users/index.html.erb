<p id="notice"><%= notice %></p>

  <div class="container">
    <%= render "stanley" %>
    <div class="row">
      <div class="col s12">

        <table>
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Email</th>
              <th>Telefono</th>
              <th>Fecha de Nacimiento</th>
              <th>Ocupación</th>
              <th>Estado</th>
              <th>Delegación</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.lastname %></td>
                <td><%= user.email %></td>
                <td><%= user.phone %></td>
                <td><%= user.birthday %></td>
                <td><%= user.ocupation %></td>
                <td><%= user.state %></td>
                <td><%= user.county %></td>
                <td><%= link_to 'Ver', user %></td>
                <td><%= link_to 'Editar', edit_user_path(user) %></td>
                <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="center-align">
          <h5 class="black-text"><%= link_to 'Nuevo Registro', new_user_path %></h5>
        </div>
      </div>
    </div>
  </div>
